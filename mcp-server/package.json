{
    "name": "color-accessibility-mcp-server",
    "version": "1.0.0",
    "description": "MCP server for Color Accessibility Checker",
    "type": "module",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "build:local": "tsc src/index-local.ts --outDir dist-local --module Node16 --moduleResolution Node16 --target ES2022 --esModuleInterop --skipLibCheck",
        "start": "node dist/index.js",
        "start:local": "node dist-local/index-local.js",
        "dev": "tsc && node dist/index.js"
    },
    "keywords": [
        "mcp",
        "accessibility",
        "wcag"
    ],
    "author": "Criszoraid",
    "license": "MIT",
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.23.0",
        "cors": "^2.8.5",
        "express": "^4.21.2",
        "zod": "^4.1.13"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.25",
        "@types/node": "^22.19.1",
        "tsx": "^4.20.6",
        "typescript": "^5.9.3"
    }
}
